include ../../components/section-title/section-title
include ../../components/button/button

mixin event-titles-item(title, num)
  h3.events__titles-item(data-title=num)= title

mixin event()
  .events__content-event
    .events__content-event__wrap.flex
      .events__content-event__img(style="background-image: url('../img/marafon2.jpg');")
        a(href="#")
      .events__content-event__main
        h4.events__content-event__title
          a(href="#") Название события
        p.events__content-event__text Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Quis ipsum suspendisse ultrices gravida. Risus commodo viverra maecenas accumsan lacus vel facilisis.
        .events__content-event__bot.flex.justify-content-between.align-items-center 
          +button('Регистрация', '', 'btn-min')
          .events__content-event__date
            b 15 ноября
            | , Казань

mixin event-content-item(num)
  .events__content-item(class="events__content-item" + num)
    .events__content-list.flex.row-p
      .events__content-col.col-p
        .events__content-col__img(style="background-image: url('../img/marafon.jpg');")
        .events__content-col__img(style="background-image: url('../img/marafon.jpg');")
      .events__content-col.col-p.events-slider
        +event()
        +event()
        +event()
        

section.events.section.section-not-bot
  ._container.container
    +section-title('Ближайшие ', 'события')
    ._titles.flex.justify-content-between
      +event-titles-item('Мероприятия', '1')
      +event-titles-item('Мероприятия для детей', '2')
      +event-titles-item('Велотуры', '3')
    ._content
      +event-content-item('1')
      +event-content-item('2')
      +event-content-item('3')